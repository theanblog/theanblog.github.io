---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const pageTitle = "Seja bem-vindo ao blog AN";
---

<Layout title="Welcome to Astro.">
  <main class="md:w-[800px] text-center">
    <h1>{pageTitle}</h1>
    <span>Confira os últimos posts!</span>
    <div class="my-16">
      <div class="flex space-x-5">
        <img
          class="max-h-[400px] rounded-xl"
          src="https://m.media-amazon.com/images/M/MV5BMTQ5ODA1NDk0Nl5BMl5BanBnXkFtZTgwNTc0OTIwOTE@._V1_.jpg"
          alt="Pôster do filme Sorcerer."
        />
        <div class="mt-auto">
          <a href="#">
            <p
              class="text-[60px] text-left leading-[4rem] hover:underline line-clamp-4"
              style="font-weight:700"
            >
              Sorcerer - 1977, e sua adaptação da Netflix
            </p>
          </a>
          <hr />
          <p class="text-left">Redação | 01/04/2024</p>
          <p class="text-left">
            Tags: <b
              class="hover:underline rounded bg-[#121d35] mx-1 px-1 font-normal"
              >review</b
            >
            <b
              class="hover:underline rounded bg-[#121d35] mx-1 px-1 font-normal"
              >netflix</b
            ><b
              class="hover:underline rounded bg-[#121d35] mx-1 px-1 font-normal"
              >clássicos</b
            >
            <b
              class="hover:underline rounded bg-[#121d35] mx-1 px-1 font-normal"
              >adaptação</b
            >
          </p>
        </div>
      </div>
    </div>

	<div class="my-16">
		<div class="flex space-x-5">
		  <img
			class="max-h-[400px] rounded-xl"
			src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fmedium.com%2Flinuxforeveryone%2Fhow-to-sync-all-your-stuff-with-syncthing-linux-android-guide-536fe61d68df&psig=AOvVaw3xrJqMJTh2TTO4N9yqu8cF&ust=1711759426588000&source=images&cd=vfe&opi=89978449&ved=0CBIQjRxqFwoTCLCpxfiemIUDFQAAAAAdAAAAABAG"
			alt="Pôster do filme Sorcerer."
		  />
		  <div class="mt-auto">
			<a href="#">
			  <p
				class="text-[60px] text-left leading-[4rem] hover:underline line-clamp-4"
				style="font-weight:700"
			  >
			  As melhores opções para compartilhar arquivos entre o smartphone e o PC
			  </p>
			</a>
			<hr />
			<p class="text-left">Redação | 01/04/2024</p>
			<p class="text-left">
			  Tags: <b
				class="hover:underline rounded bg-[#121d35] mx-1 px-1 font-normal"
				>review</b
			  >
			  <b
				class="hover:underline rounded bg-[#121d35] mx-1 px-1 font-normal"
				>netflix</b
			  ><b
				class="hover:underline rounded bg-[#121d35] mx-1 px-1 font-normal"
				>clássicos</b
			  >
			  <b
				class="hover:underline rounded bg-[#121d35] mx-1 px-1 font-normal"
				>adaptação</b
			  >
			</p>
		  </div>
		</div>
	  </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
